<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.MainActivity">


        <Button
            android:id="@+id/pager_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pager"
            app:layout_constraintBottom_toTopOf="@+id/state_pager_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/state_pager_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State Pager"
            app:layout_constraintBottom_toTopOf="@+id/recycler_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pager_btn" />

        <Button
            android:id="@+id/recycler_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recycler"
            app:layout_constraintBottom_toTopOf="@+id/swipe_recycler_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/state_pager_btn" />

        <Button
            android:id="@+id/swipe_recycler_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SwipeRefresh"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>